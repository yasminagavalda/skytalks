extends ../layout

block content
  .body
    .login
      .container
        .wrapper
          form.form-signin(action='api/login', method='POST', name='Login_Form')
            h3.form-signin-heading Please Sign In
            hr.colorgraph
            br
            input.form-control(type='text', name='email', placeholder='Email', required='', autofocus='')
            br
            input.form-control(type='password', name='password', placeholder='Password', required='')
            br
            button.btn.btn-lg.mybutton.btn-block(name='Submit', value='Login', type='Submit') Login
            br
            a.register(name='Submit', value='Login', type='Submit') Register
