extends ../layout

block content
  .body
    .login
      .container
        .wrapper
          form.form-signin(action='register', method='POST', name='Login_Form')
            h3.form-signin-heading Register
            hr.colorgraph
            if userexists
              .alert.alert-danger.alert-dismissable
                a.panel-close.close(data-dismiss='alert') ×
                i.fa.fa-coffee
                |         Email already exists
            if registerok
              .alert.alert-success.alert-dismissable
                a.panel-close.close(data-dismiss='alert') ×
                i.fa.fa-coffee
                |         You have successfully registered
            br
            input.form-control(type='email', name='email', placeholder='Email', required='', autofocus='')
            br
            .input-group
              input.form-control.password(type='password', name='password', placeholder='Password')
              span.input-group-btn.showpass
                button.btn.btn-default.reveal(type='button')
                  i.glyphicon.glyphicon-eye-open
            br
            button.btn.btn-lg.mybutton.btn-block(value='Login', type='Submit') Register
            br
            a.register(href='login' name='Submit', value='Login', type='Submit') Login




